# Environment Configuration for Deepfake Detection Backend
# Copy this file to .env and fill in your values

# ============ API Configuration ============
API_KEY=your_secure_api_key_here_min_32_chars
SECRET_KEY=your_secret_key_for_jwt_tokens_here
PORT=5000
FLASK_ENV=production

# ============ Model Configuration ============
MODEL_PATH=./models/deepfake_detector.h5
MODEL_NAME=deepfake_detector_v1

# ============ Training Configuration ============
BATCH_SIZE=32
EPOCHS=150
LEARNING_RATE=0.0001
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1
TARGET_ACCURACY=0.99

# ============ Dataset Configuration ============
DATA_DIR=./data
CUSTOM_DATASET_DIR=./data/custom_dataset
ENABLE_DATASET_AUGMENTATION=true
NUM_WORKERS=4

# ============ GPU/Compute Configuration ============
CUDA_VISIBLE_DEVICES=0
TF_CPP_MIN_LOG_LEVEL=2
ALLOW_GROWTH=true
MAX_MEMORY_FRACTION=0.8

# ============ Logging Configuration ============
LOG_LEVEL=INFO
LOG_DIR=./logs
ENABLE_TENSORBOARD=true
TENSORBOARD_LOG_DIR=./logs/tensorboard

# ============ Database Configuration (Optional) ============
# DATABASE_URL=postgresql://user:password@localhost/deepfake_db
# REDIS_URL=redis://localhost:6379/0

# ============ Third-party Services (Optional) ============
# WANDB_API_KEY=your_weights_and_biases_key
# SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ============ File Upload Configuration ============
MAX_FILE_SIZE=1000000000
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=mp4,avi,mov,flv,wmv,wav,mp3,flac,m4a,jpg,jpeg,png,bmp,gif

# ============ Security Configuration ============
CORS_ORIGINS=*
CORS_METHODS=GET,POST,OPTIONS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============ Performance Thresholds ============
DEEPFAKE_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.7
ENABLE_ENSEMBLE=true

# ============ Email Configuration (Optional) ============
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=alerts@example.com

# ============ Backup & Storage ============
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
S3_BUCKET=deepfake-detection-backups
S3_REGION=us-east-1

# ============ Rate Limiting ============
RATE_LIMIT_VIDEO=50
RATE_LIMIT_IMAGE=100
RATE_LIMIT_AUDIO=50
RATE_LIMIT_BATCH=10

# ============ Debug Configuration ============
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false
